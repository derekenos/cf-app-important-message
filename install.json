{
  "$schema": "http://json.schemastore.org/install",
  "resources": {
    "body": [
      {
        "type": "style",
        "src": "./build/styles.css"
      },
      {
        "type": "script",
        "src": "./build/index.js"
      }
    ]
  },

  "dns": [],

  "preview": {
    "handlers": [
      {
        "options": ["_default"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },

  "options": {
    "properties": {
      "enabled": {
        "order": 1,
        "title": "Message Enabled",
        "type": "boolean",
        "default": true
      },

      "pages": {
        "order": 2,
        "title": "Pages",
        "description": "On which pages do you want to show this message?",
        "type": "object",
        "format": "page"
      },

      "messageType": {
        "order": 3,
        "title": "Message Type",
        "type": "string",
        "format": "radios",
        "enum": [
          "predefined",
          "custom"
        ],
        "enumNames": {
          "predefined": "Predefined",
          "custom": "Custom"
        },
        "default": "predefined"
      },

      "predefinedMessage": {
        "showIf": {
          "messageType": "predefined"
        },
        "order": 4,
        "title": "Select Predefined Message Type",
        "type": "string",
        "format": "radios",
        "enum": [
          "minorServiceInterruption",
          "majorServiceInterruption",
          "scheduledMaintenance"
        ],
        "enumNames": {
          "minorServiceInterruption": "Minor service interruption",
          "majorServiceInterruption": "Major service interruption",
          "scheduledMaintenance": "Scheduled maintenance"
        },
        "default": "minorServiceInterruption"
      },

      "customMessage": {
        "showIf": {
          "messageType": "custom"
        },
        "order": 4,
        "title": "Write a Custom Message",
        "type": "string",
        "format": "richtext",
        "default": "Your Custom Message",
        "placeholder": "Write your custom message here."
      },

      "displayMode": {
        "order": 5,
        "title": "Display Mode",
        "type": "string",
        "format": "radios",
        "enum": [
          "banner",
          "modal"
        ],
        "enumNames": {
          "banner": "Display as a banner at the top of the screen",
          "modal": "Display as a modal that overlays the entire screen"
        },
        "default": "banner"
      },

      "displayMode": {
        "order": 5,
        "title": "Display Mode",
        "type": "string",
        "format": "radios",
        "enum": [
          "banner",
          "modal"
        ],
        "enumNames": {
          "banner": "Display as a banner at the top of the screen",
          "modal": "Display as a modal that overlays the entire screen"
        },
        "default": "banner"
      },

      "alwaysDisplay": {
        "order": 6,
        "title": "Always Display",
        "description": "Do not allow users to dismiss this message.",
        "type": "boolean",
        "default": false
      },

      "colorScheme": {
        "order": 7,
        "title": "Color Scheme",
        "type": "string",
        "format": "radios",
        "enum": [
          "predefined",
          "custom"
        ],
        "enumNames": {
          "predefined": "Predefined",
          "custom": "Custom"
        },
        "default": "predefined"
      },

      "predefinedColorScheme": {
        "showIf": {
          "colorScheme": "predefined"
        },
        "order": 8,
        "title": "Select Predefined Color Scheme",
        "type": "string",
        "format": "radios",
        "enum": [
          "#cce5ff,#004085",
          "#e2e3e5,#383d41",
          "#d4edda,#155724",
          "#f8d7da,#721c24",
          "#fff3cd,#856404",
          "#d1ecf1,#0c5460",
          "#fefefe,#818182",
          "#d6d8d9,#1b1e21"
        ],
        "enumNames": {
          "#cce5ff,#004085": "Primary",
          "#e2e3e5,#383d41": "Secondary",
          "#d4edda,#155724": "Success",
          "#f8d7da,#721c24": "Danger",
          "#fff3cd,#856404": "Warning",
          "#d1ecf1,#0c5460": "Info",
          "#fefefe,#818182": "Light",
          "#d6d8d9,#1b1e21": "Dark"
        },
        "default": "#cce5ff,#004085"
      },

      "customBackgroundColor": {
        "showIf": {
          "colorScheme": "custom"
        },
        "order": 9,
        "title": "Background Color",
        "format": "color",
        "type": "string",
        "default": "#cce5ff"
      },

      "customTextColor": {
        "showIf": {
          "colorScheme": "custom"
        },
        "order": 10,
        "title": "Text Color",
        "format": "color",
        "type": "string",
        "default": "#333333"
      },

      "borderRadius": {
        "order": 11,
        "title": "Corner Roundness",
        "type": "number",
        "format": "slider",
        "default": 0,
        "minimum": 0,
        "maximum": 32,
        "step": 1
      }
    }
  }
}
