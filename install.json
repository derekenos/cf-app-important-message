{
  "$schema": "http://json.schemastore.org/install",
  "resources": {
    "body": [
      {
        "type": "style",
        "src": "./build/styles.css"
      },
      {
        "type": "script",
        "src": "./build/index.js"
      }
    ]
  },
  "dns": [],
  "preview": {
    "handlers": [
      {
        "options": ["_default"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "enabled": {
        "order": 1,
        "title": "Banner Enabled",
        "type": "boolean",
        "default": true
      },
      "pages": {
        "order": 2,
        "title": "Pages",
        "description": "Which pages should show this banner?",
        "type": "object",
        "format": "page"
      },
      "message": {
        "order": 3,
        "title": "Banner Message",
        "type": "string",
        "format": "richtext",
        "default": "We're currently experiencing some connectivity issues.",
        "placeholder": "We're currently experiencing some connectivity issues."
      },
      "backgroundColor": {
        "order": 4,
        "title": "Background Color",
        "format": "color",
        "type": "string",
        "default": "#ffa500"
      },
      "messageColor": {
        "order": 5,
        "title": "Message Color",
        "format": "color",
        "type": "string",
        "default": "#ffffff"
      }
    }
  }
}
