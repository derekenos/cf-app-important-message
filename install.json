{
  "$schema": "http://json.schemastore.org/install",
  "resources": {
    "body": [
      {
        "type": "style",
        "src": "./build/styles.css"
      },
      {
        "type": "script",
        "src": "./build/index.js"
      }
    ]
  },

  "dns": [],

  "preview": {
    "handlers": [
      {
        "options": ["_default"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      },
      {
        "options": ["_product"],
        "execute": "INSTALL_SCOPE.setProduct(INSTALL_PRODUCT)"
      }
    ]
  },

  "options": {
    "properties": {
      "enabled": {
        "order": 0,
        "title": "Message Enabled",
        "type": "boolean",
        "default": true
      },

      "pages": {
        "order": 5,
        "title": "Pages",
        "description": "On which pages do you want to show this message?",
        "type": "object",
        "format": "page"
      },

      "messageType": {
        "order": 10,
        "title": "Message Type",
        "type": "string",
        "format": "radios",
        "enum": [
          "predefined",
          "customPlain",
          "customRich",
          "customHTML"
        ],
        "enumNames": {
          "predefined": "Predefined",
          "customPlain": "Custom Plain Text",
          "customRich": "Custom Rich Text",
          "customHTML": "Custom HTML"
        },
        "default": "predefined",
        "products": {
          "customRich": ["full"],
          "customHTML": ["full"]
        }
      },

      "predefinedMessage": {
        "showIf": {
          "messageType": "predefined"
        },
        "order": 15,
        "title": "Select a Predefined Message",
        "type": "string",
        "format": "radios",
        "enum": [
          "minorServiceInterruption",
          "majorServiceInterruption",
          "scheduledMaintenance"
        ],
        "enumNames": {
          "minorServiceInterruption": "Minor service interruption",
          "majorServiceInterruption": "Major service interruption",
          "scheduledMaintenance": "Scheduled maintenance"
        },
        "default": "minorServiceInterruption"
      },

      "customPlainMessage": {
        "showIf": {
          "messageType": "customPlain"
        },
        "order": 15,
        "title": "Your Custom Message",
        "type": "string",
        "default": "A Custom Plain-Text Message",
        "placeholder": "Write your custom message here."
      },

      "customRichMessageGroup": {
        "showIf": {
          "messageType": "customRich"
        },
        "order": 15,
        "title": "Rich Text Message",
        "type": "object",
        "properties": {
          "message": {
            "order": 0,
            "type": "string",
            "format": "richtext",
            "default": "A Custom <strong>Rich-Text</strong> Message",
            "placeholder": "Write your custom message here."
          },
          "maxImageWidth": {
            "order": 5,
            "title": "Adjust the Maximum Image Width",
            "type": "number",
            "format": "slider",
            "default": 200,
            "minimum": 20,
            "maximum": 800,
            "step": 10
          }
        }
      },

      "customHTMLMessage": {
        "showIf": {
          "messageType": "customHTML"
        },
        "order": 15,
        "title": "Your Custom Message HTML",
        "description": "This input allows you to customize the message element HTML. The parent element is a &lt;p&gt;, so specify only inline elements.",
        "type": "string",
        "default": "A <span style=\"color: red;\">Custom</span> <b>HTML</b> <a href=\"#\">Message</a>"
      },

      "displayMode": {
        "order": 20,
        "title": "Display Mode",
        "type": "string",
        "format": "radios",
        "enum": [
          "banner",
          "modal"
        ],
        "enumNames": {
          "banner": "Display as a horizontal banner",
          "modal": "Display as a modal that overlays the entire screen"
        },
        "default": "banner"
      },

      "notDismissible": {
        "order": 25,
        "title": "Not Dismissible",
        "description": "Do not allow users to dismiss this message.",
        "type": "boolean",
        "default": false
      },

      "dismissalPeriodGroup": {
        "showIf": {
          "notDismissible": false
        },
        "order": 26,
        "title": "Dismissal Period",
        "description": "Set the amount of time to hide this message from a visitor after they've dismissed it. A value of 0 will display the message to them on every page load.",
        "type": "object",
        "properties": {
          "minutes": {
            "order": 1,
            "title": "Number",
            "type": "number",
            "default": 1,
            "minimum": 0
          },
          "multipler": {
            "order": 2,
            "title": "Unit",
            "type": "string",
            "format": "radios",
            "enum": [
              "1",
              "60",
              "1440"
            ],
            "enumNames": {
              "1": "Minutes",
              "60": "Hours",
              "1440": "Days"
            },
            "default": "1440"
          }
        }
      },

      "buttonText": {
        "showIf": {
          "displayMode": "modal",
          "notDismissible": false
        },
        "order": 30,
        "title": "Button Text",
        "type": "string",
        "default": "OK"
      },

      "location": {
        "showIf": {
          "displayMode": "banner",
          "notDismissible": true
        },
        "order": 30,
        "title": "Location",
        "description": "Where should the permanent banner appear on your site?",
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      },

      "colorScheme": {
        "order": 35,
        "title": "Color Scheme",
        "type": "string",
        "format": "radios",
        "enum": [
          "predefined",
          "custom"
        ],
        "enumNames": {
          "predefined": "Predefined",
          "custom": "Custom"
        },
        "default": "predefined",
        "products": {
          "custom": ["full"]
        }
      },

      "predefinedColorScheme": {
        "showIf": {
          "colorScheme": "predefined"
        },
        "order": 40,
        "title": "Select Predefined Color Scheme",
        "type": "string",
        "format": "radios",
        "enum": [
          "#cce5ff,#004085,#007bff,#ffffff",
          "#e2e3e5,#383d41,#6c757d,#ffffff",
          "#d4edda,#155724,#28a745,#ffffff",
          "#f8d7da,#721c24,#dc3545,#ffffff",
          "#fff3cd,#856404,#ffc107,#212529",
          "#d1ecf1,#0c5460,#17a2b8,#ffffff",
          "#fefefe,#818182,#f8f9fa,#212529",
          "#d6d8d9,#1b1e21,#343a40,#ffffff"
        ],
        "enumNames": {
          "#cce5ff,#004085,#007bff,#ffffff": "Primary",
          "#e2e3e5,#383d41,#6c757d,#ffffff": "Secondary",
          "#d4edda,#155724,#28a745,#ffffff": "Success",
          "#f8d7da,#721c24,#dc3545,#ffffff": "Danger",
          "#fff3cd,#856404,#ffc107,#212529": "Warning",
          "#d1ecf1,#0c5460,#17a2b8,#ffffff": "Info",
          "#fefefe,#818182,#f8f9fa,#212529": "Light",
          "#d6d8d9,#1b1e21,#343a40,#ffffff": "Dark"
        },
        "default": "#cce5ff,#004085,#007bff,#ffffff"
      },

      "customBackgroundColor": {
        "showIf": {
          "colorScheme": "custom"
        },
        "order": 45,
        "title": "Background Color",
        "format": "color",
        "type": "string",
        "default": "#e2e3e5"
      },

      "customTextColor": {
        "showIf": {
          "colorScheme": "custom"
        },
        "order": 50,
        "title": "Text Color",
        "format": "color",
        "type": "string",
        "default": "#383d41"
      },

      "customButtonBackgroundColor": {
        "showIf": {
          "colorScheme": "custom",
          "displayMode": "modal",
          "notDismissible": false
        },
        "order": 55,
        "title": "Button Background Color",
        "format": "color",
        "type": "string",
        "default": "#6c757d"
      },

      "customButtonTextColor": {
        "showIf": {
          "colorScheme": "custom",
          "displayMode": "modal",
          "notDismissible": false
        },
        "order": 60,
        "title": "Button Text Color",
        "format": "color",
        "type": "string",
        "default": "#ffffff"
      },

      "fontSize": {
        "order": 65,
        "title": "Text Size",
        "type": "number",
        "format": "slider",
        "default": 1,
        "minimum": 1,
        "maximum": 4,
        "step": 0.1
      },

      "horizontalPadding": {
        "order": 70,
        "title": "Horizontal Whitespace Padding",
        "type": "number",
        "format": "slider",
        "default": 0,
        "minimum": 0,
        "maximum": 10,
        "step": 0.1
      },

      "verticalPadding": {
        "order": 75,
        "title": "Vertical Whitespace Padding",
        "type": "number",
        "format": "slider",
        "default": 0,
        "minimum": 0,
        "maximum": 10,
        "step": 0.1
      },

      "borderRadius": {
        "showIf": {
          "displayMode": "modal"
        },
        "order": 80,
        "title": "Corner Roundness",
        "type": "number",
        "format": "slider",
        "default": 16,
        "minimum": 0,
        "maximum": 32,
        "step": 1
      }
    }
  }
}
